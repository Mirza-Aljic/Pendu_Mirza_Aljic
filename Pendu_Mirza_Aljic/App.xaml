<Application x:Class="Pendu_Mirza_Aljic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pendu_Mirza_Aljic"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Début des ressources partagées -->

        <!-- Style personnalisé pour les lettres du jeu de pendu -->
        <Style x:Key="LetterStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Background" Value="LightGray"/> 
        </Style>

        <!-- Fin des ressources partagées -->
    </Application.Resources>
</Application>
